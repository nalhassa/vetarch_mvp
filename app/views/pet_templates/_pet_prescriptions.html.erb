<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Prescriptions

    <a data-toggle="collapse" href="#pet_prescriptions_new_form">
      Add prescription
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @pet.prescriptions.each do |prescription| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/prescriptions/<%= prescription.id %>">
          <%= prescription.client_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%if current_user == prescription.user %>
          <a href="/delete_prescription_from_pet/<%= prescription.id %>">
            Delete
          </a>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="pet_prescriptions_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "pet_templates/pet_prescriptions_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
