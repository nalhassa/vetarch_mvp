<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pricings

    <a data-toggle="collapse" href="#medication_pricings_new_form">
      Add online pricing
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @medication.pricings.each do |online_pricing| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/online_pricings/<%= online_pricing.id %>">
          <%= online_pricing.provider %>
        </a>

        <a href="/delete_online_pricing_from_medication/<%= online_pricing.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="medication_pricings_new_form">
        <%= render partial: "medication_templates/medication_pricings_new_form" %>
      </div>
    </div>

  </ul>
</div>
