<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Medication #<%= @medication.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/medications" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link medication start -->
      <div class="col">
        <a href="/medications/<%= @medication.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit medication
        </a>
      </div>
      <!-- Edit link medication end -->

      <!-- Delete link medication start -->
      <div class="col">
        <a href="/delete_medication/<%= @medication.id %>" class="btn btn-block btn-outline-secondary">
          Delete medication
        </a>
      </div>
      <!-- Delete link medication end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @medication.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Category
      </dt>
      <!-- Display category start -->
      <dd>
        <%= @medication.category %>
      </dd>
      <!-- Display category end -->

      <dt>
        Amount mg
      </dt>
      <!-- Display amount_mg start -->
      <dd>
        <%= @medication.amount_mg %>
      </dd>
      <!-- Display amount_mg end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@medication.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@medication.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

