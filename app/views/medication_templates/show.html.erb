<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Medication #<%= @medication.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/medications" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/medications/<%= @medication.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit medication
        </a>
      </div>

      <div class="col">
        <a href="/delete_medication/<%= @medication.id %>" class="btn btn-block btn-outline-secondary">
          Delete medication
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @medication.name %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @medication.category %>
      </dd>

      <dt>
        Amount mg
      </dt>
      <dd>
        <%= @medication.amount_mg %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@medication.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@medication.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "medication_templates/medication_prescriptions" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "medication_templates/medication_pricings" %>
  </div>
</div>
