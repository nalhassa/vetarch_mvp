<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All clients
    </h1>

    <a href="/clients/new" class="btn btn-block btn-outline-secondary">
      Add a new client
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "client_templates/clients_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Street address
        </th>

        <th>
          Zip code
        </th>

        <th>
          Apartment number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @clients.each do |client| %>
      <tr>
        <td>
          <%= client.id %>
        </td>

        <td>
          <%= client.first_name %>
        </td>

        <td>
          <%= client.last_name %>
        </td>

        <td>
          <%= client.street_address %>
        </td>

        <td>
          <%= client.zip_code %>
        </td>

        <td>
          <%= client.apartment_number %>
        </td>

        <td>
          <%= time_ago_in_words(client.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(client.updated_at) %> ago
        </td>

        <td>
          <a href="/clients/<%= client.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @clients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
