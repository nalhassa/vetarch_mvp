<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All clients
    </h1>

    <a href="/clients/new" class="btn btn-block btn-outline-secondary">
      Add a new client
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Street address
        </th>

        <th>
          Zip code
        </th>

        <th>
          Apartment number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @clients.each do |client| %>
      <tr>
        <!-- Display client.id start -->
        <td>
          <%= client.id %>
        </td>
        <!-- Display client.id end -->

        <!-- Display client.first_name start -->
        <td>
          <%= client.first_name %>
        </td>
        <!-- Display client.first_name end -->

        <!-- Display client.last_name start -->
        <td>
          <%= client.last_name %>
        </td>
        <!-- Display client.last_name end -->

        <!-- Display client.street_address start -->
        <td>
          <%= client.street_address %>
        </td>
        <!-- Display client.street_address end -->

        <!-- Display client.zip_code start -->
        <td>
          <%= client.zip_code %>
        </td>
        <!-- Display client.zip_code end -->

        <!-- Display client.apartment_number start -->
        <td>
          <%= client.apartment_number %>
        </td>
        <!-- Display client.apartment_number end -->

        <!-- Display client.created_at start -->
        <td>
          <%= time_ago_in_words(client.created_at) %> ago
        </td>
        <!-- Display client.created_at end -->

        <!-- Display client.updated_at start -->
        <td>
          <%= time_ago_in_words(client.updated_at) %> ago
        </td>
        <!-- Display client.updated_at end -->

        <td>
          <a href="/clients/<%= client.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @clients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
