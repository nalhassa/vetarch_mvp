<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pets

    <a data-toggle="collapse" href="#client_pets_new_form">
      Add pet
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @client.pets.each do |pet| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/pets/<%= pet.id %>">
          <%= pet.name %>
        </a>

        <a href="/delete_pet_from_client/<%= pet.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="client_pets_new_form">
        <%= render partial: "client_templates/client_pets_new_form" %>
      </div>
    </div>

  </ul>
</div>
