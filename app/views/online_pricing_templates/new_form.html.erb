<h1>
  Add a new online pricing
</h1>


<hr>

<form action="/create_online_pricing" method="post">

  <div class="form-group">
    <label for="provider">
      Provider
    </label>

    <input type="text" id="provider" name="provider" class="form-control">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="ppd">
    <input id="ppd" class="form-check-input" name="ppd" type="checkbox">
    <label for="ppd" class="form-check-label">
      Ppd
    </label>
  </div>

  <div class="form-group">
    <label for="hyperlink">
      Hyperlink
    </label>

    <input type="text" id="hyperlink" name="hyperlink" class="form-control">
  </div>

  <div class="form-group">
    <label for="medication_id">
      Medication
    </label>

    <%= select_tag(:medication_id, options_from_collection_for_select(Medication.all, :id, :name, @online_pricing.medication_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create online pricing
  </button>
</form>

<hr>

<a href="/online_pricings">
  Go back
</a>
