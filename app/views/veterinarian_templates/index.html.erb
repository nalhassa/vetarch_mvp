<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All veterinarians
    </h1>

    <a href="/veterinarians/new" class="btn btn-block btn-outline-secondary">
      Add a new veterinarian
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "veterinarian_templates/veterinarians_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @veterinarians.each do |veterinarian| %>
      <tr>
        <td>
          <%= veterinarian.id %>
        </td>

        <td>
          <%= veterinarian.first_name %>
        </td>

        <td>
          <%= veterinarian.last_name %>
        </td>

        <td>
          <%= time_ago_in_words(veterinarian.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(veterinarian.updated_at) %> ago
        </td>

        <td>
          <a href="/veterinarians/<%= veterinarian.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @veterinarians, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
