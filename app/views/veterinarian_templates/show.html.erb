<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Veterinarian #<%= @veterinarian.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/veterinarians" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link veterinarian start -->
      <div class="col">
        <a href="/veterinarians/<%= @veterinarian.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit veterinarian
        </a>
      </div>
      <!-- Edit link veterinarian end -->

      <!-- Delete link veterinarian start -->
      <div class="col">
        <a href="/delete_veterinarian/<%= @veterinarian.id %>" class="btn btn-block btn-outline-secondary">
          Delete veterinarian
        </a>
      </div>
      <!-- Delete link veterinarian end -->
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <!-- Display first_name start -->
      <dd>
        <%= @veterinarian.first_name %>
      </dd>
      <!-- Display first_name end -->

      <dt>
        Last name
      </dt>
      <!-- Display last_name start -->
      <dd>
        <%= @veterinarian.last_name %>
      </dd>
      <!-- Display last_name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@veterinarian.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@veterinarian.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

