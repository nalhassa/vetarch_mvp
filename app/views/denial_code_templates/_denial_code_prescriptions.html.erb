<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Prescriptions

    <a data-toggle="collapse" href="#denial_code_prescriptions_new_form">
      Add prescription
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @denial_code.prescriptions.each do |prescription| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/prescriptions/<%= prescription.id %>">
          <%= prescription.client_id %>
        </a>

        <%if current_user == prescription.user %>
          <a href="/delete_prescription_from_denial_code/<%= prescription.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="denial_code_prescriptions_new_form">
        <%= render partial: "denial_code_templates/denial_code_prescriptions_new_form" %>
      </div>
    </div>

  </ul>
</div>
