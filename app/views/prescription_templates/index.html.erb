<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All prescriptions
    </h1>

    <a href="/prescriptions/new" class="btn btn-block btn-outline-secondary">
      Add a new prescription
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Client
        </th>

        <th>
          Medication
        </th>

        <th>
          Pet
        </th>

        <th>
          Quantity
        </th>

        <th>
          Package size
        </th>

        <th>
          Dosage
        </th>

        <th>
          Dosage time units
        </th>

        <th>
          Refills
        </th>

        <th>
          Request date
        </th>

        <th>
          Veterinarian
        </th>

        <th>
          User
        </th>

        <th>
          Approved
        </th>

        <th>
          Denial code
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @prescriptions.each do |prescription| %>
      <tr>
        <!-- Display prescription.id start -->
        <td>
          <%= prescription.id %>
        </td>
        <!-- Display prescription.id end -->

        <!-- Display prescription.client_id start -->
        <td>
          <%= prescription.client.first_name %>
        </td>
        <!-- Display prescription.client_id end -->

        <!-- Display prescription.medication_id start -->
        <td>
          <%= prescription.medication.name %>
        </td>
        <!-- Display prescription.medication_id end -->

        <!-- Display prescription.pet_id start -->
        <td>
          <%= prescription.pet.name %>
        </td>
        <!-- Display prescription.pet_id end -->

        <!-- Display prescription.quantity start -->
        <td>
          <%= prescription.quantity %>
        </td>
        <!-- Display prescription.quantity end -->

        <!-- Display prescription.package_size start -->
        <td>
          <%= prescription.package_size %>
        </td>
        <!-- Display prescription.package_size end -->

        <!-- Display prescription.dosage start -->
        <td>
          <%= prescription.dosage %>
        </td>
        <!-- Display prescription.dosage end -->

        <!-- Display prescription.dosage_time_units start -->
        <td>
          <%= prescription.dosage_time_units %>
        </td>
        <!-- Display prescription.dosage_time_units end -->

        <!-- Display prescription.refills start -->
        <td>
          <%= prescription.refills %>
        </td>
        <!-- Display prescription.refills end -->

        <!-- Display prescription.request_date start -->
        <td>
          <%= prescription.request_date %>
        </td>
        <!-- Display prescription.request_date end -->

        <!-- Display prescription.veterinarian_id start -->
        <td>
          <%= prescription.veterinarian.first_name %>
        </td>
        <!-- Display prescription.veterinarian_id end -->

        <!-- Display prescription.user_id start -->
        <td>
          <%= prescription.user_id %>
        </td>
        <!-- Display prescription.user_id end -->

        <!-- Display prescription.approved start -->
        <td>
          <%= prescription.approved %>
        </td>
        <!-- Display prescription.approved end -->

        <!-- Display prescription.denial_code_id start -->
        <td>
          <%= prescription.denial_code_id %>
        </td>
        <!-- Display prescription.denial_code_id end -->

        <!-- Display prescription.created_at start -->
        <td>
          <%= time_ago_in_words(prescription.created_at) %> ago
        </td>
        <!-- Display prescription.created_at end -->

        <!-- Display prescription.updated_at start -->
        <td>
          <%= time_ago_in_words(prescription.updated_at) %> ago
        </td>
        <!-- Display prescription.updated_at end -->

        <td>
          <a href="/prescriptions/<%= prescription.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
